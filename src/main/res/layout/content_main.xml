<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:id="@+id/btnResultado"
    android:background="@drawable/backgroundrepeat">

    <TextView android:text="@string/Title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:shadowColor="#a3ff95"
        android:singleLine="true"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:theme="@style/AppTheme"
        android:textColor="#070707"
        android:translationZ="10dp"
        android:layout_alignTop="@+id/frameLayout2"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:paddingLeft="2dp"
        android:autoText="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@mipmap/contabilidad" />

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/linerlayout_bg"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2">

    <Button
        android:id="@+id/btn1"

        android:text="@string/btnResultado"
        android:textSize="16sp"

        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/btnshape"
        android:shadowColor="#824570"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:textColor="#e8dbdb"
        android:onClick="onClick"
        android:layout_gravity="center" />

        <Button
        android:id="@+id/btn2"

        android:text="@string/btnGastos"
        android:textColor="#e8dbdb"
        android:textSize="16dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/btnshape"
        android:shadowColor="#824570"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn3"

            android:text="@string/btnIngresos"
            android:textColor="#e8dbdb"
            android:textSize="16dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btnshape"
            android:shadowColor="#824570"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn4"

            android:text="@string/btnSetting"
            android:textColor="#e8dbdb"
            android:textSize="16dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btnshape"
            android:shadowColor="#824570"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn5"

            android:text="@string/btnAyuda"
            android:textColor="#e8dbdb"
            android:textSize="16dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btnshape"
            android:shadowColor="#824570"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_gravity="center" />

       </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/linerlayout_bg"
        android:id="@+id/frameLayout"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignBottom="@+id/linearLayout">

    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/balance"
        android:id="@+id/frameLayout2"
       >

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Subtitle"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textSize="20sp"
        android:textColor="#e6ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="214dp"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/frameLayout"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:id="@+id/btn6"
            android:background="@mipmap/resultados"
            android:layout_weight="0.06"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn7"
            android:layout_marginTop="4dp"
            android:background="@mipmap/gastos"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:id="@+id/btn8"
            android:layout_marginTop="4dp"
            android:background="@mipmap/ingresos"
            android:layout_gravity="left|center_vertical"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btn9"
            android:layout_marginTop="2dp"
            android:background="@mipmap/system_preferences"
            android:onClick="onClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn10"
            android:layout_marginTop="0dp"
            android:background="@mipmap/question"
            android:onClick="onClick" />
    </LinearLayout>


</RelativeLayout>
