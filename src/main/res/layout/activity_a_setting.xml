<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16pt"
    android:paddingRight="16pt"
    android:paddingTop="0dp"
    android:paddingBottom="2dp"
    tools:context="todo.misapp.com.twotablesinonedb.aSetting">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/idTabla"
        android:layout_below="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/IdFilaCapital"
                android:weightSum="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabCapital"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right" />

                <EditText
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/idCapital"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:layout_weight="0.10"
                    android:layout_marginLeft="180dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:layout_gravity="bottom" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7ccc61">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#7ccc61">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabIns"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="14dp"
                    android:textSize="16sp"
                    android:layout_gravity="left"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabSal"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="40dp"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/idSalario"
                    android:layout_marginLeft="163dp"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:layout_weight="0.05" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7ccc61">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:background="#7ccc61">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabOtrosIngresos"
                    android:id="@+id/textView5"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdOtrosIngresos"
                    android:layout_marginLeft="165dp"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc6861">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/LabGastos"
                android:id="@+id/textView6"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold|italic"
                android:background="#cc6861"
                android:layout_marginLeft="22dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabRenta"
                    android:id="@+id/textView7"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/idRenta"
                    android:layout_marginLeft="165dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.10" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LaElectricidad"
                    android:id="@+id/textView8"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/idElectricidad"
                    android:layout_marginLeft="120dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.13" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabCable"
                    android:id="@+id/textView9"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdCable"
                    android:layout_marginLeft="108dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabInternet"
                    android:id="@+id/textView10"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdGas"
                    android:layout_marginLeft="140dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabAlimento"
                    android:id="@+id/textView11"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdAlimentos"
                    android:layout_marginLeft="130dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabSegMedico"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdSegMedico"
                    android:layout_marginLeft="100dp"
                    android:textColor="#f10909"
                    android:width="100dp"
                    android:textSize="16dp"
                    android:gravity="right" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabSegCarro"
                    android:id="@+id/idS"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdSegCarro"
                    android:layout_marginLeft="90dp"
                    android:textColor="#f10909"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc6861">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="bottom"
                android:background="#cc6861">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/LabOtros"
                    android:id="@+id/textView15"
                    android:textSize="16dp"
                    android:layout_marginLeft="47dp" />

                <EditText
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/IdOtrosGastos"
                    android:layout_marginLeft="165dp"
                    android:textColor="#ffffff"
                    android:width="200dp"
                    android:textSize="16dp"
                    android:gravity="right" />
            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#596529">

            <LinearLayout android:weightSum="1"
                android:background="#596529">

                <Button
                    style="@android:style/Widget.Holo.ActionButton.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnActualizar"
                    android:id="@+id/button"
                    android:layout_weight="0.10"
                    android:onClick="onClick_AddTask" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnIngresos"
                    android:id="@+id/button3"
                    android:background="#596529"
                    android:layout_weight="0.23"
                    android:onClick="DeleteAll" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnGastos"
                    android:id="@+id/button2"
                    android:layout_weight="0.19"
                    android:background="#596529" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSalir"
                    android:id="@+id/button5"
                    android:layout_weight="0.18"
                    android:background="#596529"
                    android:onClick="btnSalir" />

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/LabTitulo"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:background="#596529" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTasks" />

</RelativeLayout>
